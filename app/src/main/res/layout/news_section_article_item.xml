<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.sung.guardiannews.model.Article" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sung.guardiannews.view.widget.CustomTextView
            android:id="@+id/news_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{model.sectionId}"
            android:layout_marginLeft="@dimen/margin_large"
            android:gravity="left"
            android:textAllCaps="false"
            android:textSize="@dimen/font_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textFontPath="fonts/gt_medium.otf"
            tools:text="News Section Title"/>

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_large"
            android:scaleType="centerCrop"
            android:visibility="@{model.fields != null}"
            app:url="@{model.fields.thumbnail}"
            app:layout_constraintDimensionRatio="H,16:8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_article_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>